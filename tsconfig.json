{
  "compilerOptions": {
    "target": "ES2022",                                 
    "module": "CommonJS",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@logger": ["utils/logger"],
      "@utils/*": ["utils/*"],
      "@services/*": ["services/*"],
      "@config": ["config"],
      "@libs/*": ["libs/*"],
      "@data/*": ["data/*"],
      "@data": ["data/index"]
    },
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
